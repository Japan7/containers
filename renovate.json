{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Japan7/renovate-config",
    "github>Japan7/renovate-config:python"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update git digest in matrix YAML files",
      "managerFilePatterns": ["matrix/*/config.yaml"],
      "matchStrings": [
        "owner: (?<owner>\\S+)\\s+repo: (?<repo>\\S+)\\s+branch: (?<currentValue>\\S+)\\s+ref: (?<currentDigest>\\S+)"
      ],
      "depNameTemplate": "{{{owner}}}/{{{repo}}}",
      "packageNameTemplate": "https://github.com/{{{owner}}}/{{{repo}}}",
      "datasourceTemplate": "git-refs"
    },
    {
      "customType": "regex",
      "description": "Update git tag in matrix YAML files",
      "managerFilePatterns": ["matrix/*/config.yaml"],
      "matchStrings": [
        "owner: (?<owner>\\S+)\\s+repo: (?<repo>\\S+)\\s+tag: (?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{owner}}}/{{{repo}}}",
      "packageNameTemplate": "https://github.com/{{{owner}}}/{{{repo}}}",
      "datasourceTemplate": "git-tags"
    }
  ]
}
